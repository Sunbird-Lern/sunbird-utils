{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Certificate Extension",
  "description": "This extension provides a reference to certificate",
  "type": "object",
  "definitions": {
    "ISODate": {
      "description": "ISO 8601 date format string YYYY-MM-DD or YYYYMMDD",
      "type": "string",
      "pattern": "^([0-9]{4})(-?)(1[0-2]|0[1-9])\\2(3[01]|0[1-9]|[12][0-9])$"
    }
  },
  "properties": {
    "awardedThrough": {
      "type": "string"
    },
    "signatory": {
      "type": "array"
    },
    "printUri": {
      "type": "string"
    },
    "validFrom": {
      "type": "string"
    },
    "signature": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "creator": {
          "type": "string"
        },
        "created": {
          "type": "string"
        },
        "signatureValue": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "awardedThrough"
  ]
}
